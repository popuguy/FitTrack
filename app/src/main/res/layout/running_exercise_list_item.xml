<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--TODO: if name textview is too large cut to ... at 15 characters-->
    <TextView
        android:id="@+id/exercise_name_textview"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="DEFAULTaaaaaaaa"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/exercise_sets_reps_textview"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="XxX"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/set5_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/set4_checkbox" />
        <CheckBox
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/set4_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/set3_checkbox" />
        <CheckBox
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/set3_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/set2_checkbox" />
        <CheckBox
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/set2_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/set1_checkbox"/>
        <CheckBox
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/set1_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>